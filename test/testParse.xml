<?xml version="1.0" encoding="UTF-8"?>
<tests>
    <test>
        <description>Structure array</description>
        <matlab>{'foo'}</matlab>
        <schema></schema>
        <json>["foo"]</json>
    </test>
    <test>
        <description>AllOf</description>
        <matlab>struct('id', '4711', 'foo', 2, 'bar', 'DEF_VAL')</matlab>
        <schema>
            {
                "$ref": "schema2.json"
            }
        </schema>
        <json>
            {
                "id":"4711",
                "foo":2
            }
        </json>
    </test>
    <test>
        <description>Structure array with defaults</description>
        <matlab>struct('foo', {1 2}, 'bar', {3 4})</matlab>
        <schema>
            {
                "type": "array",
                "items": {
                    "type": "object",
                    "properties": {
                        "foo": {},
                        "bar": { "type": "number", "default": 3 }
                    },
                    "additionalProperties": false
                }
            }
        </schema>
        <json>
            [
                {"foo":1},
                {"foo":2,"bar":4}
            ]
        </json>
    </test>
</tests>
